{
  "name": "praktikum.yandex",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --open",
    "build": "eslint && tsc && vite build",
    "preview": "vite preview",
    "start": "tsc && npm run build && node ./server",
    "stylelint": "stylelint src/**/*.scss --fix",
    "eslint": "eslint src --fix",
    "test": "mocha",
    "check": "npm-run-all eslint stylelint test",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.scss": "npm run stylelint",
    "*.{js,jsx,ts,tsx}": "npm run eslint"
  },
  "devDependencies": {
    "@types/chai": "^4.3.9",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.3",
    "@types/node": "^20.5.9",
    "@types/sinon": "^10.0.20",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "chai": "^4.3.10",
    "eslint": "^8.49.0",
    "handlebars": "^4.7.8",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^15.0.2",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "sinon": "^17.0.0",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.0.0",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^5.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-handlebars": "^1.6.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "nanoid": "^5.0.1",
    "sass": "^1.66.1"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
